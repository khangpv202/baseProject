<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_layout_height"
        android:background="@color/header_color"
        android:orientation="horizontal">

    <com.gem.moolacustomer.presentation.custom.CircleImageView
            android:id="@+id/company_avatar"
            android:layout_width="@dimen/avatar_circle_width"
            android:layout_height="@dimen/avatar_circle_height"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/large_margin_size"/>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_centerInParent="true"
                  android:gravity="center"
                  android:id="@+id/store_info_ll"
                  android:orientation="vertical">
        <TextView
                android:id="@+id/tv_company_name"
                style="@style/T2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Name"/>

    </LinearLayout>

    <com.gem.moolacustomer.presentation.custom.CircleImageView
            android:id="@+id/user_avatar"
            android:layout_width="@dimen/avatar_circle_width"
            android:layout_height="@dimen/avatar_circle_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/large_margin_size"/>

</RelativeLayout>